<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context=".TicketBookingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="Buy a Ticket"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Movie"
        android:textColor="@color/white"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/textbox1"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movieTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7sp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Movies"
        android:textColor="@color/white"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textbox1"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="25dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/dropdown_cinema"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Select Cinemas"
                android:textColorHint="@color/gray"
                android:paddingLeft="15dp"
                android:textSize="15dp"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Schedule"
        android:textColor="@color/white"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mondays, Tuesdays,\nWednesdays, Thursdays"
        android:textColor="@color/gray"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/textbox1"
                android:text="2:30pm"
                android:textColor="@color/white"
                android:textSize="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/textbox1"
                android:text="3:30PM"
                android:textColor="@color/white"
                android:textSize="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/textbox1"
                android:text="4:00PM"
                android:textColor="@color/white"
                android:textSize="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/textbox1"
                android:text="6:00PM"
                android:textColor="@color/white"
                android:textSize="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/textbox1"
                android:text="8:30PM"
                android:textColor="@color/white"
                android:textSize="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/textbox1"
                android:text="8:30PM"
                android:textColor="@color/white"
                android:textSize="8dp"/>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fridays, Saturdays"
        android:textColor="@color/gray"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/textbox1"
                android:text="2:30pm"
                android:textColor="@color/white"
                android:textSize="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/textbox1"
                android:text="3:30PM"
                android:textColor="@color/white"
                android:textSize="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/textbox1"
                android:text="4:00PM"
                android:textColor="@color/white"
                android:textSize="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/textbox1"
                android:text="6:00PM"
                android:textColor="@color/white"
                android:textSize="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/textbox1"
                android:text="8:30PM"
                android:textColor="@color/white"
                android:textSize="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/textbox1"
                android:text="9:30PM"
                android:textColor="@color/white"
                android:textSize="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/textbox1"
                android:text="10:00PM"
                android:textColor="@color/white"
                android:textSize="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/textbox1"
                android:text="11:00PM"
                android:textColor="@color/white"
                android:textSize="8dp"/>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sundays"
        android:textColor="@color/gray"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/textbox1"
                android:text="2:30pm"
                android:textColor="@color/white"
                android:textSize="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/textbox1"
                android:text="3:30PM"
                android:textColor="@color/white"
                android:textSize="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/textbox1"
                android:text="4:00PM"
                android:textColor="@color/white"
                android:textSize="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/textbox1"
                android:text="6:00PM"
                android:textColor="@color/white"
                android:textSize="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/textbox1"
                android:text="8:30PM"
                android:textColor="@color/white"
                android:textSize="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/textbox1"
                android:text="10:00PM"
                android:textColor="@color/white"
                android:textSize="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/textbox1"
                android:text="11:00PM"
                android:textColor="@color/white"
                android:textSize="8dp"/>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Tickets"
        android:textColor="@color/white"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/textbox1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticket"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost"
            android:layout_marginLeft="100sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:text="Quantity"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal"
            android:layout_marginLeft="30sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="292dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/textbox1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Total cost \nBooking Fee"
            android:textColor="@color/white"
            android:textSize="9sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:textSize="9sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/cancel"
            android:text="Cancel"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:textSize="8dp"/>

        <Button
            android:id="@+id/booknow"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/book_now"
            android:text="Book Now"
            android:textColor="@color/white"
            android:textSize="8dp"/>


    </LinearLayout>

</LinearLayout>